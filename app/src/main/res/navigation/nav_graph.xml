<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/WelcomeFragment">

    <fragment
        android:id="@+id/WelcomeFragment"
        android:name="com.patstudio.communalka.presentation.ui.main.WelcomeFragment"
        android:label="Главная"
        tools:layout="@layout/fragment_welcome">

        <action
            android:id="@+id/loLoginPage"
            app:destination="@id/LoginFragment" />
        <action
            android:id="@+id/toPinCode"

            app:destination="@id/PinCode" />
        <argument
            android:name="user"
            app:argType="com.patstudio.communalka.data.model.User" />
        <action
            android:id="@+id/toRegistration"
            app:destination="@id/Registration" />
        <action
            android:id="@+id/action_WelcomeFragment_to_AddRoom"
            app:destination="@id/AddRoom" />
    </fragment>
    <fragment
        android:id="@+id/LoginFragment"
        android:name="com.patstudio.communalka.presentation.ui.auth.LoginFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/toPinCode"
            app:destination="@id/PinCode" />
        <action
            android:id="@+id/toRegistrationFragment"
            app:destination="@id/Registration" />
        <action
            android:id="@+id/ConfirmSms"
            app:destination="@id/ConfirmSms" />
    </fragment>

    <fragment
        android:id="@+id/Registration"
        android:name="com.patstudio.communalka.presentation.ui.auth.RegistrationFragment"
        android:label="Registration Fragment"
        tools:layout="@layout/fragment_registration">
        <action
            android:id="@+id/toLogin"
            app:destination="@id/LoginFragment" />
        <action
            android:id="@+id/toConfirmSms"
            app:destination="@id/ConfirmSms" />
        <action
            android:id="@+id/toPinCode"
            app:destination="@id/PinCode" />
    </fragment>

    <fragment
        android:id="@+id/Request"
        android:name="com.patstudio.communalka.presentation.ui.main.RequestFragment"
        android:label="Заявки"
        tools:layout="@layout/fragment_request">

    </fragment>

    <fragment
        android:id="@+id/ConfirmSms"
        android:name="com.patstudio.communalka.presentation.ui.auth.ConfirmSmsFragment"
        android:label="ConfirmSms Fragment"
        tools:layout="@layout/fragment_confirm_sms">

        <argument
            android:name="smsCode"
            app:argType="string" />
        <argument
            android:name="repeatSend"
            app:argType="long" />
        <argument
            android:name="type"
            app:argType="string" />
        <argument
            android:name="phone"
            app:argType="com.patstudio.communalka.data.model.UserForm" />
        <action
            android:id="@+id/toPinCode"
            app:popUpTo="@id/WelcomeFragment"

            app:destination="@id/PinCode" />
        <action
            android:id="@+id/toRegistrationFragment"
            app:destination="@id/Registration" />
        <action
            android:id="@+id/toLogin"
            app:destination="@id/LoginFragment" />
    </fragment>

    <fragment
        android:id="@+id/RestorePinCode"
        android:name="com.patstudio.communalka.presentation.ui.auth.RestorePinFragment"
        android:label="PinCode Fragment"
        tools:layout="@layout/fragment_restore">

    </fragment>

    <fragment
        android:id="@+id/PinCode"
        android:name="com.patstudio.communalka.presentation.ui.auth.PinCodeFragment"
        android:label="PinCode Fragment"
        tools:layout="@layout/fragment_pin_code">

        <action
            android:id="@+id/action_PinCode_to_WelcomeFragment"
            app:destination="@id/WelcomeFragment"
            app:launchSingleTop="true"
            app:popUpToInclusive="true"
            app:popUpTo="@+id/WelcomeFragment" />
        <action
            android:id="@+id/toRestore"
            app:destination="@id/RestorePinCode"
            app:popUpTo="@+id/WelcomeFragment" />
        <argument
            android:name="user"
            app:argType="com.patstudio.communalka.data.model.UserForm" />
        <argument
            android:name="type"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/Profile"
        android:name="com.patstudio.communalka.presentation.ui.main.welcome.ProfileFragment"
        android:label="Профиль"
        tools:layout="@layout/fragment_profile">

    </fragment>

    <fragment
        android:id="@+id/AddRoom"
        android:name="com.patstudio.communalka.presentation.ui.main.room.AddRoomFragment"
        android:label="Добавить помещение"
        tools:layout="@layout/fragment_add_room">

    </fragment>
</navigation>