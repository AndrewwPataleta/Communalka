<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:padding="16dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/attachRoomImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/circle_gray_background"
            android:padding="28dp"
            android:tint="@color/gray_dark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iconAdd"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/circle_white_with_stroke_background"
            android:padding="12dp"
            app:layout_constraintBottom_toBottomOf="@id/attachRoomImage"
            app:layout_constraintEnd_toEndOf="@id/attachRoomImage"
            android:src="@drawable/ic_camera"/>

        <TextView
            android:id="@+id/fio_text"
            style="@style/TextBody1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/robotobold"
            android:text="ФИО собственника"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iconAdd" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/fio_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Иванов Иван Иванович"
            android:textColorHint="@color/gray_placeholder"
            android:textSize="16sp"
            android:theme="@style/EditTextBottomLine"
            android:inputType="textCapWords"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fio_text" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/saveRoom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/dark_blue"
            android:fontFamily="@font/robotoregular"
            android:padding="8dp"
            app:cornerRadius="8dp"
            android:text="Сохранить"
            android:textAllCaps="false"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/fio_edit"
            app:layout_constraintVertical_bias="1.0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>