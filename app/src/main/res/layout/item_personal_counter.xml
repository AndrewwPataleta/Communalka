<?xml version="1.0" encoding="utf-8"?>
<layout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto">

<data>
    <variable name="viewModel" type="com.patstudio.communalka.presentation.ui.main.readings.TransmissionReadingListViewModel"/>
    <variable name="position" type="Integer"/>

    <variable name="model" type="com.patstudio.communalka.data.model.PlacementMeter"/>
</data>

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/unconnectedPersonalAccountRoot"
    android:layout_width="match_parent"
    android:layout_marginTop="16dp"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_gray_background"
            android:padding="16dp">


            <ImageView
                android:id="@+id/imageService"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/counterName"
                style="@style/TextBold1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:fontFamily="@font/robotobold"
                android:text="@{model.title}"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:layout_marginStart="16dp"
                app:layout_constraintEnd_toStartOf="@id/history"
                app:layout_constraintStart_toEndOf="@+id/imageService"
                app:layout_constraintTop_toTopOf="parent"/>

            <FrameLayout
                android:id="@+id/history"
                android:layout_width="50dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toTopOf="@id/counterName"
                app:layout_constraintBottom_toBottomOf="@id/counterName"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:onClick="@{() -> viewModel.selectMeterForHistory(model)}"
                    android:src="@drawable/ic_history"/>

            </FrameLayout>

            <TextView
                android:id="@+id/previosValueText"
                style="@style/TextBold1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:fontFamily="@font/robotoregular"
                android:text="Предыдущие показания"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/counterName"/>

            <TextView
                android:id="@+id/previosValue"
                style="@style/TextBold1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fontFamily="@font/robotoregular"
                android:text="@{String.valueOf(model.last_values.prevValue)}"
                android:textColor="@color/gray_dark"
                android:textSize="17sp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/counterName"/>

            <TextView
                android:id="@+id/consumptionText"
                style="@style/TextBold1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:fontFamily="@font/robotoregular"
                android:text="Расход"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/previosValueText"/>


            <TextView
                android:id="@+id/consumptionValue"
                style="@style/TextBold1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fontFamily="@font/robotoregular"
                android:text="@{String.valueOf(model.last_values.consumption)}"
                android:textColor="@color/gray_dark"
                android:textSize="17sp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/previosValueText"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/transmissionReadingContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"
                android:padding="16dp"
                android:onClick="@{() -> viewModel.selectMeterForTransmissionReading(model)}"
                app:layout_constraintTop_toBottomOf="@id/consumptionText"
                android:background="@drawable/background_gray_stroke">

                <TextView
                    android:id="@+id/lastValueText"
                    style="@style/TextBold1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:fontFamily="@font/robotoregular"
                    android:text="Введите последние показания"
                    android:textColor="@color/gray_dark"
                    android:textSize="17sp"
                    app:layout_constraintEnd_toStartOf="@id/lastValue"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintVertical_bias="0.5" />

                <TextView
                    android:id="@+id/lastValue"
                    style="@style/TextBold1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:fontFamily="@font/robotoregular"
                    android:text="@{String.valueOf(model.last_values.lastValue)}"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:layout_marginEnd="16dp"

                    app:layout_constraintStart_toEndOf="@+id/lastValueText"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/image"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintVertical_bias="0.5" />

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintVertical_bias="0.5"
                    android:rotation="180"
                    android:src="@drawable/ic_left"
                    app:tint="@color/black" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>



</androidx.constraintlayout.widget.ConstraintLayout>
</layout>





