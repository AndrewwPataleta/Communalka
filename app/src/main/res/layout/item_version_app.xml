<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="viewModel" type="com.patstudio.communalka.presentation.ui.main.profile.HistoryVersionViewModel"/>
        <variable name="position" type="Integer"/>
        <variable name="model" type="com.patstudio.communalka.data.model.VersionApp"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/versionApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/versionText"
            style="@style/TextBold1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/robotobold"
            android:text="Версия 4.4"
            android:textColor="@color/black"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/date"
            style="@style/TextBold1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/robotoregular"
            android:text="23 февраля 2021 г"
            android:textColor="@color/gray_dark"
            android:textSize="14sp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@id/versionText"
            app:layout_constraintBottom_toBottomOf="@id/versionText"
            app:layout_constraintEnd_toStartOf="@id/arrow"/>

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/descriptionBarrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="descriptionVersion"
            app:barrierDirection="bottom"/>

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/mainBarrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="date, versionApp, arrow"
            app:barrierDirection="bottom"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/arrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_down"
            android:onClick="@{() -> viewModel.arrowClick(position)}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/versionText"
            app:layout_constraintBottom_toBottomOf="@id/versionText"
            app:layout_constraintVertical_bias="0.5" />


        <View
            android:id="@+id/appDescriptionDecorator"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#EEF1F5"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/descriptionBarrier"/>

        <TextView
            android:id="@+id/descriptionVersion"
            style="@style/TextBody1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/robotoregular"
            android:text="Теперь можно оставлять заявки на жилищные, коммунальные и коммерческие услуги."
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/versionText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>
