<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:background="@drawable/background_rounded_corners">

    <View
        android:id="@+id/decorator"
        android:layout_width="30dp"
        android:layout_height="3dp"
        android:background="#D7D7D7"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/downloadReceipt"
        style="@style/TextBody1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/robotobold"
        android:text="Скачать чек"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/black"
        android:textSize="17sp"
        app:layout_constraintTop_toBottomOf="@id/decorator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.5"
        android:padding="16dp"/>

    <TextView
        android:id="@+id/sendEmail"
        style="@style/TextBody1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/robotobold"
        android:text="Отправить чек на почту"
        android:textColor="@android:color/black"
        android:textSize="17sp"
        app:layout_constraintTop_toBottomOf="@id/downloadReceipt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.5"
        android:padding="16dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>

