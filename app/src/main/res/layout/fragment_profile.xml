<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:padding="16dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avatar"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:padding="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:tintMode="src_over"
            android:tint="#F7F7F7"
            android:src="@drawable/ic_profile"/>

        <TextView
            android:id="@+id/userFio"
            style="@style/TextBody1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/robotobold"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            android:layout_marginStart="16dp"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/avatar"
            app:layout_constraintTop_toTopOf="@id/avatar"
            app:layout_constraintBottom_toBottomOf="@id/avatar"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iconDown"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/userFio"
            app:layout_constraintBottom_toBottomOf="@+id/userFio"
            app:layout_constraintVertical_bias="0.5"
            android:src="@drawable/ic_down"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/loginBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/dark_blue"
            android:fontFamily="@font/robotoregular"
            app:cornerRadius="8dp"
            android:text="Войти / Зарегистрироваться"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/userInfoBarrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="iconDown, loginBtn, avatar, userFio"
            app:barrierDirection="bottom"/>

        <View
            android:id="@+id/barrierUserInfo"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#EEF1F5"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/userInfoBarrier"/>

        <TextView
            android:id="@+id/profileManagementHeader"
            style="@style/TextBold1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/robotobold"
            android:text="Управление профилем"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/barrierUserInfo" />

        <View
            android:id="@+id/profileManagementHeaderDecorator"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#EEF1F5"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/profileManagementHeader"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/profileIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_person"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/profileManagementHeaderDecorator"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/profileText"
            style="@style/TextBody1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/robotobold"
            android:text="Личные данные"
            android:textColor="@android:color/black"
            android:textSize="17sp"

            app:layout_constraintVertical_bias="0.5"
            android:padding="16dp"
            app:layout_constraintStart_toEndOf="@id/profileIcon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profileManagementHeaderDecorator"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/profileArrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_down"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/profileText"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintBottom_toBottomOf="@id/profileText"
            android:rotation="270"/>

        <View
            android:id="@+id/profileDecorator"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#EEF1F5"

            app:layout_constraintTop_toBottomOf="@id/profileText"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/cardsIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_card"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profileDecorator"/>

        <TextView
            android:id="@+id/cardsText"
            style="@style/TextBody1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/robotobold"
            android:text="Карты"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            android:layout_marginStart="16dp"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/cardsIcon"
            app:layout_constraintTop_toTopOf="@id/cardsIcon"
            app:layout_constraintEnd_toStartOf="@+id/cardsArrow"
            app:layout_constraintBottom_toBottomOf="@id/cardsIcon"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/cardsArrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_down"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/cardsText"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintBottom_toBottomOf="@id/cardsText"
            android:rotation="270"/>

        <View
            android:id="@+id/cardsDecorator"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#EEF1F5"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/cardsText"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/securityIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_security"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardsDecorator"/>

        <TextView
            android:id="@+id/securityText"
            style="@style/TextBody1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/robotobold"
            android:text="Безопасность и вход"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            android:layout_marginStart="16dp"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/securityIcon"
            app:layout_constraintTop_toTopOf="@id/securityIcon"
            app:layout_constraintEnd_toStartOf="@+id/securityArrow"
            app:layout_constraintBottom_toBottomOf="@id/securityIcon"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/securityArrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_down"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/securityText"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintBottom_toBottomOf="@id/securityText"
            android:rotation="270"/>

        <View
            android:id="@+id/securityDecorator"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#EEF1F5"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/securityText"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/notificationIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_push"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/securityDecorator"/>

        <TextView
            android:id="@+id/notificationText"
            style="@style/TextBody1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/robotobold"
            android:text="Уведомления"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            android:layout_marginStart="16dp"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/notificationIcon"
            app:layout_constraintTop_toTopOf="@id/notificationIcon"
            app:layout_constraintEnd_toStartOf="@+id/notificationArrow"
            app:layout_constraintBottom_toBottomOf="@id/notificationIcon"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/notificationArrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_down"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/notificationText"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintBottom_toBottomOf="@id/notificationText"
            android:rotation="270"/>

        <View
            android:id="@+id/notificationDecorator"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#EEF1F5"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/notificationText"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/helpIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_help"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/notificationDecorator"/>

        <TextView
            android:id="@+id/helpText"
            style="@style/TextBody1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/robotobold"
            android:text="Помощь"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            android:layout_marginStart="16dp"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/helpIcon"
            app:layout_constraintTop_toTopOf="@id/helpIcon"
            app:layout_constraintEnd_toStartOf="@+id/helpArrow"
            app:layout_constraintBottom_toBottomOf="@id/helpIcon"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/helpArrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_down"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/helpText"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintBottom_toBottomOf="@id/helpText"
            android:rotation="270"/>

        <View
            android:id="@+id/helpDecorator"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#EEF1F5"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/helpText"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/InfoAppIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_info"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/helpDecorator"/>

        <TextView
            android:id="@+id/InfoAppText"
            style="@style/TextBody1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/robotobold"
            android:text="О приложении"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            android:padding="16dp"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/InfoAppIcon"
            app:layout_constraintTop_toTopOf="@id/InfoAppIcon"
            app:layout_constraintEnd_toEndOf="@+id/infoAppArrow"
            app:layout_constraintBottom_toBottomOf="@id/InfoAppIcon"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/infoAppArrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_down"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/InfoAppText"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintBottom_toBottomOf="@id/InfoAppText"
            android:rotation="270"/>

        <View
            android:id="@+id/infoAppDecorator"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#EEF1F5"

            app:layout_constraintTop_toBottomOf="@id/InfoAppText"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/logoutIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_logout"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/infoAppDecorator"/>

        <TextView
            android:id="@+id/logoutText"
            style="@style/TextBody1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/robotobold"
            android:text="Выйти"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            android:padding="16dp"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/logoutIcon"
            app:layout_constraintTop_toTopOf="@id/logoutIcon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/logoutIcon"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/logoutArrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_down"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/logoutText"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintBottom_toBottomOf="@id/logoutText"
            android:rotation="270"/>


        <androidx.constraintlayout.widget.Group
            android:id="@+id/logoutGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="logoutArrow, logoutIcon, logoutText"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>