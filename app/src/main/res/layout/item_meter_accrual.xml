<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="viewModel" type="com.communalka.app.presentation.ui.main.readings.AccrualViewModel"/>
        <variable name="position" type="Integer"/>
        <variable name="model" type="com.communalka.app.data.model.PlacementMeter"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/meterAccrualRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
       >

        <TextView
            android:id="@+id/meterName"
            style="@style/TextBold1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/robotobold"
            android:text="@{model.title}"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/serial"
            style="@style/TextBold1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/robotobold"

            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/meterName"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{() -> viewModel.selectMeterForHistory(model)}"
            android:src="@drawable/ic_history"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:paddingStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/serial"
            app:layout_constraintBottom_toBottomOf="@+id/serial" />

        <TextView
            android:id="@+id/lastDate"
            style="@style/TextBold1"
            android:layout_width="0dp"
            android:layout_marginTop="16dp"
            android:layout_height="wrap_content"
            app:fontFamily="@font/robotoregular"
            android:text="Дата последний показаний"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintEnd_toStartOf="@id/lastAccrualValue"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/meterName"/>


        <TextView
            android:id="@+id/lastDateValue"
            style="@style/TextBold1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:fontFamily="@font/robotoregular"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintTop_toTopOf="@id/lastDate"
            app:layout_constraintBottom_toBottomOf="@id/lastDate"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/lastAccrual"
            style="@style/TextBold1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:fontFamily="@font/robotoregular"
            android:text="Последние показания, м3"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lastDate"/>

        <TextView
            android:id="@+id/lastAccrualValue"
            style="@style/TextBold1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:fontFamily="@font/robotoregular"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:text="@{String.valueOf(model.last_values.lastValue)}"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@id/lastAccrual"
            app:layout_constraintBottom_toBottomOf="@id/lastAccrual"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/prevAccrual"
            style="@style/TextBold1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:fontFamily="@font/robotoregular"
            android:text="Предыдущие показания, м3"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lastAccrual"/>

        <TextView
            android:id="@+id/prevAccrualValue"
            style="@style/TextBold1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:fontFamily="@font/robotoregular"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginTop="8dp"
            android:text="@{String.valueOf(model.last_values.prevValue)}"
            app:layout_constraintTop_toTopOf="@id/prevAccrual"
            app:layout_constraintBottom_toBottomOf="@id/prevAccrual"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/accrual"
            style="@style/TextBold1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:fontFamily="@font/robotoregular"
            android:text="Расход, м3"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/prevAccrual"/>


        <TextView
            android:id="@+id/accrualValue"
            style="@style/TextBold1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:fontFamily="@font/robotoregular"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginTop="8dp"
            android:text="@{String.valueOf(model.last_values.consumption)}"
            app:layout_constraintTop_toTopOf="@id/accrual"
            app:layout_constraintBottom_toBottomOf="@id/accrual"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>