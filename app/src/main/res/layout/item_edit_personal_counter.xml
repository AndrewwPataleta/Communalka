<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="viewModel" type="com.communalka.app.presentation.ui.main.room.EditPersonalAccountViewModel"/>
        <variable name="position" type="Integer"/>
        <variable name="model" type="com.communalka.app.data.model.PersonalCounter"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/unconnectedPersonalAccountRoot"
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintVertical_bias="0.0">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_gray_background"
                android:padding="16dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_delete_bucket"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:visibility="gone"
                    android:onClick='@{() -> viewModel.removeCounter(model)}'
                    app:tint="@color/dark_blue" />

                <TextView
                    android:id="@+id/namePersonalCounter"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="Название"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="16dp"/>

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/nameCounterValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Холодная вода"
                    android:text="@={model.title}"
                    android:enabled="false"
                    android:textColorHint="@color/gray_placeholder"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:theme="@style/EditTextBottomLine"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/namePersonalCounter" />



                <TextView
                    android:id="@+id/numberCounter"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="Номер счетчика"
                    app:layout_constraintTop_toBottomOf="@+id/nameCounterValue"
                    android:layout_marginTop="16dp"/>

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/senderEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="9876543321"
                    android:inputType="number"
                    android:text="@={model.serial_number}"
                    android:textColorHint="@color/gray_placeholder"
                    android:textColor="@color/gray_placeholder"
                    android:textSize="16sp"
                    android:enabled="false"
                    android:theme="@style/EditTextBottomLine"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/numberCounter" />


                <TextView
                    android:id="@+id/valueText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="Значение"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@+id/senderEdit"
                    android:layout_marginTop="16dp"/>

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/valueEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="1234"
                    android:inputType="numberDecimal"
                    android:text="@={model.value}"
                    android:visibility="gone"
                    android:digits="0123456789."
                    android:textColorHint="@color/gray_placeholder"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:theme="@style/EditTextBottomLine"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/valueText" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </com.google.android.material.card.MaterialCardView>



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>


