<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable name="model" type="com.communalka.app.data.model.Placement"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/placementRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_gray_background"
        android:layout_marginTop="8dp"
        android:padding="16dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/arrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_down"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/placementSelector"
            app:layout_constraintBottom_toBottomOf="@id/placementSelector"
            app:layout_constraintVertical_bias="0.5" />

        <Spinner
            android:id="@+id/placementSelector"
            android:layout_width="match_parent"
            android:spinnerMode="dropdown"
            android:background="@null"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <View
            android:id="@+id/decorator"
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:background="@color/gray_dark"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/placementSelector"
            android:layout_marginTop="16dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/meterContainer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/decorator"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>