                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=","
                    android:textSize="22sp"
                    android:layout_marginEnd="8dp"
                    android:textColor="@color/black"/>

                <EditText
                    android:id="@+id/sixNumber"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:maxLength="1"
                    android:paddingTop="16dp"
                    android:enabled="false"
                    android:paddingBottom="16dp"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:fontFamily="@font/robotobold"
                    android:inputType="number"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/transmission_not_requered_selector"/>

                <EditText
                    android:id="@+id/sevenNumber"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:maxLength="1"
                    android:enabled="false"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:fontFamily="@font/robotobold"
                    android:inputType="number"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/transmission_not_requered_selector"/>

                <EditText
                    android:id="@+id/eigthNumber"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:maxLength="1"
                    android:paddingTop="16dp"
                    android:enabled="false"
                    android:paddingBottom="16dp"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:fontFamily="@font/robotobold"
                    android:inputType="number"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/transmission_not_requered_selector"/>

            </LinearLayout>

            <TextView
                android:id="@+id/lastSymbolRules"
                style="@style/TextBold1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:fontFamily="@font/robotoregular"
                android:text="Цифры после запятой указывать не обязательно"
