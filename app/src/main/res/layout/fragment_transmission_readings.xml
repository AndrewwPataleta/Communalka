<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable name="model" type="com.patstudio.communalka.data.model.PlacementMeter"/>
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/transmissionReading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_gray_background"
            android:layout_marginTop="8dp"
            android:padding="16dp">

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_left"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:tint="@color/black" />

            <TextView
                android:id="@+id/counterType"
                style="@style/TextBold1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fontFamily="@font/robotobold"
                android:text="@{model.title}"
                android:layout_marginStart="16dp"
                android:textColor="@color/black"
                android:textSize="17sp"
                app:layout_constraintStart_toEndOf="@+id/back"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/EnterTransmissionReadingText"
                style="@style/TextBold1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:fontFamily="@font/robotoregular"
                android:text="Ввод текущих показаний"
                android:textColor="@color/gray_dark"
                android:textSize="17sp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="@+id/counterType"
                app:layout_constraintTop_toBottomOf="@+id/counterType"/>

            <View
                android:id="@+id/decorator"
                android:layout_width="match_parent"
                android:layout_height="0.4dp"
                android:background="@color/gray_dark"
                android:layout_marginBottom="16dp"
                app:layout_constraintTop_toBottomOf="@id/EnterTransmissionReadingText"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/numberCounterText"
                style="@style/TextBold1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:fontFamily="@font/robotoregular"
                android:text="Номер счетчика"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/decorator"/>

            <TextView
                android:id="@+id/numberCounterValue"
                style="@style/TextBold1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:fontFamily="@font/robotoregular"
                android:text="@{model.serial_number}"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:layout_marginTop="16dp"
               app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/decorator"/>

            <TextView
                android:id="@+id/lastReadingsText"
                style="@style/TextBold1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:fontFamily="@font/robotoregular"
                android:text="Предыдущие показания"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/numberCounterValue"/>

            <TextView
                android:id="@+id/lastReadingsValue"
                style="@style/TextBold1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:fontFamily="@font/robotoregular"
                android:text="@{String.valueOf(model.last_values.prevValue)}"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/numberCounterValue"/>

            <TextView
                android:id="@+id/consumptionText"
                style="@style/TextBold1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:fontFamily="@font/robotoregular"
                android:text="Расход"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lastReadingsValue"/>

            <TextView
                android:id="@+id/consumptionValue"
                style="@style/TextBold1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:fontFamily="@font/robotoregular"
                android:text="@{String.valueOf(model.last_values.consumption)}"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lastReadingsValue"/>


            <View
                android:id="@+id/decoratorTransmissionData"
                android:layout_width="match_parent"
                android:layout_height="0.4dp"
                android:background="@color/gray_dark"
                android:layout_marginBottom="16dp"
                app:layout_constraintTop_toBottomOf="@id/consumptionValue"
                android:layout_marginTop="16dp"/>

