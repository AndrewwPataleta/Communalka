<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="viewModel" type="com.patstudio.communalka.presentation.ui.main.profile.welcome.WelcomeViewModel"/>
        <variable name="position" type="Integer"/>
        <variable name="model" type="com.patstudio.communalka.data.model.Placement"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/placementRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_gray_background"
        android:layout_marginTop="8dp"
        android:padding="16dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/placementImage"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:src="@drawable/ic_office"
            android:background="@drawable/circle_gray_background"
            android:padding="8dp"
            android:tint="@color/gray_dark"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/placementName"
            style="@style/TextBold1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/robotobold"
            android:text="@{model.name}"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintEnd_toStartOf="@id/arrow"
            app:layout_constraintStart_toEndOf="@id/placementImage"
            app:layout_constraintTop_toTopOf="@id/placementImage" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/edit"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="10dp"
            android:visibility="gone"
            android:src="@drawable/ic_edit"
            android:onClick="@{() -> viewModel.selectEdit(model)}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ownerName"
            app:layout_constraintBottom_toBottomOf="@+id/ownerName"
            app:layout_constraintVertical_bias="0.5"/>

        <TextView
            android:id="@+id/addressRoom"
            style="@style/TextBold1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:text="@{model.address}"
            android:visibility="gone"
            app:fontFamily="@font/robotoregular"
            android:textColor="@color/gray_dark"
            android:textSize="15sp"
            android:layout_marginTop="6dp"
            app:layout_constraintStart_toStartOf="@id/placementName"

            app:layout_constraintTop_toBottomOf="@id/placementName"
            app:layout_constraintEnd_toStartOf="@+id/arrow"/>

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/addressBarrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:constraint_referenced_ids="addressRoom"
            app:barrierDirection="bottom"/>

        <TextView
            android:id="@+id/ownerName"
            style="@style/TextBold1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fontFamily="@font/robotoregular"
            android:text="@{model.fio}"
            android:textColor="@color/gray_dark"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/placementName"
            app:layout_constraintTop_toBottomOf="@id/addressBarrier" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/arrow"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_down"
            android:padding="4dp"
            android:onClick="@{() -> viewModel.clickArrow(position)}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/roomInfoBarrier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="ownerName, addressRoom, placementName"
            app:barrierDirection="bottom"/>

        <View
            android:id="@+id/decorator"
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:background="@color/gray_dark"
            app:layout_constraintTop_toBottomOf="@id/roomInfoBarrier"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/paymentStatus"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:gravity="center"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginEnd="8dp"

            app:layout_constraintEnd_toStartOf="@id/paymentButton"
            app:layout_constraintTop_toTopOf="@id/paymentButton"
            app:layout_constraintBottom_toBottomOf="@+id/paymentAmount"
            android:text="Оплата еще не начислена"/>

        <TextView
            android:id="@+id/paymentAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/black"
            android:textSize="19sp"
            android:fontFamily="@font/robotobold"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginEnd="8dp"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@id/paymentButton"
            app:layout_constraintTop_toBottomOf="@id/paymentStatus"
            android:text="2 910,00 ₽"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/paymentButton"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Оплатить"
            android:textAllCaps="false"
            android:fontFamily="@font/robotobold"
            app:layout_constraintTop_toBottomOf="@id/decorator"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:textColor="@color/white"
            android:background="@drawable/gray_button_disable_background"/>


        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/paymentInfoBarrier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="paymentButton, paymentAmount, paymentStatus "
            app:barrierDirection="bottom"/>

        <LinearLayout
            android:id="@+id/transmitTestimony"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Передать показания"
            android:textAllCaps="false"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/paymentInfoBarrier"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:background="@drawable/background_transmission_readings_btn"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_union"
                android:layout_marginEnd="8dp"
                app:tint="@color/dark_blue" />

            <TextView
                android:id="@+id/transmissioReadingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"

                android:textColor="@color/dark_blue"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginEnd="8dp"
                android:textSize="17sp"
                app:fontFamily="@font/roboto_regular"
                app:layout_constraintEnd_toStartOf="@id/paymentButton"
                app:layout_constraintTop_toTopOf="@id/paymentButton"
                app:layout_constraintBottom_toBottomOf="@id/paymentButton"
                android:text="Передача показаний"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/servicePaymentsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/transmitTestimony"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical">

        </LinearLayout>

        <View
            android:id="@+id/transmitBalloonTriger"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/transmitTestimony"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:id="@+id/paymentBalloonTrigger"
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/paymentButton"
            app:layout_constraintStart_toStartOf="@+id/paymentButton"
            app:layout_constraintEnd_toEndOf="@+id/paymentButton"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>